# Test: File targets with glob patterns

file dist/bundle.js: src/**/*.ts
    echo "Bundling TypeScript files..."
    mkdir -p dist
    cat src/*.ts src/lib/*.ts > dist/bundle.js 2>/dev/null || touch dist/bundle.js
    echo "Bundle created: dist/bundle.js"

file dist/app.min.js: dist/bundle.js
    echo "Minifying bundle..."
    cp dist/bundle.js dist/app.min.js
    echo "Minified: dist/app.min.js"

@default
task build: [dist/app.min.js]
    echo "Build complete!"

task clean:
    rm -rf dist/
    echo "Cleaned dist/"

task rebuild: [clean, build]
    echo "Rebuild complete!"
