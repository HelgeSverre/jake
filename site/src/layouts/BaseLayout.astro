---
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "The best of Make and Just, combined. File dependencies, clean syntax, parallel execution, and more.",
} = Astro.props;
const logo = "{j}";
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600;700&family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap"
            rel="stylesheet"
        />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="https://jakefile.dev/og-image.png" />
        <meta name="twitter:card" content="summary_large_image" />
    </head>
    <body class="bg-bg-primary text-text-primary antialiased">
        <!-- Navigation -->
        <nav
            class="fixed top-0 left-0 right-0 z-50 bg-bg-primary/80 backdrop-blur-xl border-b border-border"
        >
            <div
                class="max-w-6xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between"
            >
                <a
                    href="/"
                    class="flex items-center gap-2 text-xl font-semibold"
                >
                    <span
                        class="text-jake font-mono"
                        style="font-family: 'Fira Code', monospace;"
                        >{logo}</span
                    >
                    <span>jake</span>
                </a>

                <!-- Desktop Navigation (hidden on mobile) -->
                <div class="hidden md:flex items-center gap-6">
                    <!-- Features Dropdown -->
                    <div class="relative group" id="features-dropdown">
                        <button
                            id="features-toggle"
                            class="text-text-secondary hover:text-text-primary transition-colors text-sm flex items-center gap-1 cursor-pointer bg-transparent border-0 p-0"
                        >
                            Features
                            <svg
                                class="w-4 h-4 transition-transform group-hover:rotate-180"
                                id="features-arrow"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div
                            class="absolute top-full left-0 mt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50"
                            id="features-menu"
                        >
                            <div
                                class="bg-bg-secondary border border-border rounded-lg shadow-xl overflow-hidden"
                            >
                                <a
                                    href="/features"
                                    class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-colors"
                                >
                                    <div class="font-medium">Overview</div>
                                    <div class="text-xs text-text-muted">
                                        All features at a glance
                                    </div>
                                </a>
                                <a
                                    href="/features/file-targets"
                                    class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-colors"
                                >
                                    <div class="font-medium">File Targets</div>
                                    <div class="text-xs text-text-muted">
                                        Incremental builds with caching
                                    </div>
                                </a>
                                <a
                                    href="/features/parallel-execution"
                                    class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-colors"
                                >
                                    <div class="font-medium">
                                        Parallel Execution
                                    </div>
                                    <div class="text-xs text-text-muted">
                                        Run tasks concurrently
                                    </div>
                                </a>
                                <a
                                    href="/features/hooks"
                                    class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-colors"
                                >
                                    <div class="font-medium">Hooks</div>
                                    <div class="text-xs text-text-muted">
                                        Setup and cleanup automation
                                    </div>
                                </a>
                                <a
                                    href="/features/imports"
                                    class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-colors"
                                >
                                    <div class="font-medium">
                                        Imports & Modules
                                    </div>
                                    <div class="text-xs text-text-muted">
                                        Modular Jakefiles
                                    </div>
                                </a>
                                <a
                                    href="/features/watch-mode"
                                    class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-tertiary transition-colors"
                                >
                                    <div class="font-medium">Watch Mode</div>
                                    <div class="text-xs text-text-muted">
                                        Auto-rebuild on changes
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <a
                        href="/docs/introduction"
                        class="text-text-secondary hover:text-text-primary transition-colors text-sm"
                        >Docs</a
                    >
                    <a
                        href="https://github.com/HelgeSverre/jake"
                        class="text-text-secondary hover:text-text-primary transition-colors text-sm"
                        >GitHub</a
                    >
                    <a
                        href="/docs/installation"
                        class="bg-jake hover:bg-jake-dark text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
                    >
                        Get Started
                    </a>
                </div>

                <!-- Mobile menu button (visible on mobile) -->
                <button
                    id="mobile-menu-button"
                    class="md:hidden text-text-secondary hover:text-text-primary transition-colors p-2"
                    aria-label="Toggle mobile menu"
                >
                    <svg
                        class="w-6 h-6"
                        id="hamburger-icon"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg
                        class="w-6 h-6 hidden"
                        id="close-icon"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Mobile menu (full screen overlay) -->
            <div
                id="mobile-menu"
                class="md:hidden fixed inset-0 top-16 bg-bg-primary/95 backdrop-blur-xl z-40 opacity-0 invisible transition-all duration-300"
            >
                <div class="flex flex-col h-full px-4 py-6 overflow-y-auto">
                    <!-- Features Section -->
                    <div class="mb-4">
                        <button
                            id="mobile-features-toggle"
                            class="w-full flex items-center justify-between py-3 text-text-secondary hover:text-text-primary transition-colors"
                        >
                            <span class="text-base font-medium">Features</span>
                            <svg
                                class="w-5 h-5 transition-transform"
                                id="mobile-features-arrow"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div
                            id="mobile-features-menu"
                            class="hidden pl-4 space-y-2"
                        >
                            <a
                                href="/features"
                                class="block py-2 text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >
                                Overview
                            </a>
                            <a
                                href="/features/file-targets"
                                class="block py-2 text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >
                                File Targets
                            </a>
                            <a
                                href="/features/parallel-execution"
                                class="block py-2 text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >
                                Parallel Execution
                            </a>
                            <a
                                href="/features/hooks"
                                class="block py-2 text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >
                                Hooks
                            </a>
                            <a
                                href="/features/imports"
                                class="block py-2 text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >
                                Imports & Modules
                            </a>
                            <a
                                href="/features/watch-mode"
                                class="block py-2 text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >
                                Watch Mode
                            </a>
                        </div>
                    </div>

                    <a
                        href="/docs/introduction"
                        class="py-3 text-base text-text-secondary hover:text-text-primary transition-colors"
                        >Docs</a
                    >
                    <a
                        href="https://github.com/HelgeSverre/jake"
                        class="py-3 text-base text-text-secondary hover:text-text-primary transition-colors"
                        >GitHub</a
                    >
                    <a
                        href="/docs/installation"
                        class="mt-4 bg-jake hover:bg-jake-dark text-white px-6 py-3 rounded-lg text-base font-medium transition-colors text-center"
                    >
                        Get Started
                    </a>
                </div>
            </div>
        </nav>

        <script>
            // Desktop dropdown toggle
            const dropdown = document.getElementById("features-dropdown");
            const toggle = document.getElementById("features-toggle");
            const menu = document.getElementById("features-menu");
            const arrow = document.getElementById("features-arrow");

            if (dropdown && toggle && menu) {
                let isOpen = false;

                // Handle click on the toggle button
                toggle.addEventListener("click", (e) => {
                    e.preventDefault();
                    isOpen = !isOpen;

                    if (isOpen) {
                        menu.classList.remove("opacity-0", "invisible");
                        menu.classList.add("opacity-100", "visible");
                        arrow.style.transform = "rotate(180deg)";
                    } else {
                        menu.classList.add("opacity-0", "invisible");
                        menu.classList.remove("opacity-100", "visible");
                        arrow.style.transform = "rotate(0deg)";
                    }
                });

                // Close dropdown when clicking outside
                document.addEventListener("click", (e) => {
                    if (isOpen && !dropdown.contains(e.target)) {
                        isOpen = false;
                        menu.classList.add("opacity-0", "invisible");
                        menu.classList.remove("opacity-100", "visible");
                        arrow.style.transform = "rotate(0deg)";
                    }
                });

                // Close dropdown when navigating to a menu item
                const menuLinks = menu.querySelectorAll("a");
                menuLinks.forEach((link) => {
                    link.addEventListener("click", () => {
                        isOpen = false;
                        menu.classList.add("opacity-0", "invisible");
                        menu.classList.remove("opacity-100", "visible");
                        arrow.style.transform = "rotate(0deg)";
                    });
                });
            }

            // Mobile menu toggle
            const mobileMenuButton = document.getElementById("mobile-menu-button");
            const mobileMenu = document.getElementById("mobile-menu");
            const hamburgerIcon = document.getElementById("hamburger-icon");
            const closeIcon = document.getElementById("close-icon");

            if (mobileMenuButton && mobileMenu) {
                let mobileMenuOpen = false;

                mobileMenuButton.addEventListener("click", () => {
                    mobileMenuOpen = !mobileMenuOpen;

                    if (mobileMenuOpen) {
                        mobileMenu.classList.remove("opacity-0", "invisible");
                        mobileMenu.classList.add("opacity-100", "visible");
                        hamburgerIcon.classList.add("hidden");
                        closeIcon.classList.remove("hidden");
                        // Prevent body scroll when menu is open
                        document.body.style.overflow = "hidden";
                    } else {
                        mobileMenu.classList.add("opacity-0", "invisible");
                        mobileMenu.classList.remove("opacity-100", "visible");
                        hamburgerIcon.classList.remove("hidden");
                        closeIcon.classList.add("hidden");
                        // Restore body scroll
                        document.body.style.overflow = "";
                    }
                });

                // Close mobile menu when clicking on a link
                const mobileMenuLinks = mobileMenu.querySelectorAll("a");
                mobileMenuLinks.forEach((link) => {
                    link.addEventListener("click", () => {
                        mobileMenuOpen = false;
                        mobileMenu.classList.add("opacity-0", "invisible");
                        mobileMenu.classList.remove("opacity-100", "visible");
                        hamburgerIcon.classList.remove("hidden");
                        closeIcon.classList.add("hidden");
                        document.body.style.overflow = "";
                    });
                });
            }

            // Mobile features dropdown toggle
            const mobileFeaturesToggle = document.getElementById("mobile-features-toggle");
            const mobileFeaturesMenu = document.getElementById("mobile-features-menu");
            const mobileFeaturesArrow = document.getElementById("mobile-features-arrow");

            if (mobileFeaturesToggle && mobileFeaturesMenu) {
                let mobileFeaturesOpen = false;

                mobileFeaturesToggle.addEventListener("click", () => {
                    mobileFeaturesOpen = !mobileFeaturesOpen;

                    if (mobileFeaturesOpen) {
                        mobileFeaturesMenu.classList.remove("hidden");
                        mobileFeaturesArrow.style.transform = "rotate(180deg)";
                    } else {
                        mobileFeaturesMenu.classList.add("hidden");
                        mobileFeaturesArrow.style.transform = "rotate(0deg)";
                    }
                });
            }
        </script>

        <slot />

        <!-- Footer -->
        <footer class="py-12 border-t border-border">
            <div class="max-w-6xl mx-auto px-6">
                <div
                    class="flex flex-col md:flex-row justify-between items-center gap-6"
                >
                    <div class="flex items-center gap-2">
                        <span
                            class="text-jake font-mono text-xl"
                            style="font-family: 'Fira Code', monospace;"
                            >{logo}</span
                        >
                        <span class="text-text-secondary">jake</span>
                        <span class="text-text-muted text-sm"
                            >Â· Modern command running</span
                        >
                    </div>
                    <div
                        class="flex items-center gap-6 text-sm text-text-secondary"
                    >
                        <a
                            href="/docs/introduction"
                            class="hover:text-text-primary transition-colors"
                            >Docs</a
                        >
                        <a
                            href="https://github.com/HelgeSverre/jake"
                            class="hover:text-text-primary transition-colors"
                            >GitHub</a
                        >
                        <a
                            href="https://github.com/HelgeSverre/jake/issues"
                            class="hover:text-text-primary transition-colors"
                            >Issues</a
                        >
                        <a
                            href="/brand"
                            class="hover:text-text-primary transition-colors"
                            >Brand</a
                        >
                        <span class="text-text-muted">MIT License</span>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
