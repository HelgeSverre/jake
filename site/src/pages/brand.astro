// Color palette for badges
const badgeColorPalette = {
  white: { hex: 'FFFFFF', name: 'White' },
  black: { hex: '000000', name: 'Black' },
  dark: { hex: '0a0a0a', name: 'Dark' },
  gray: { hex: '555555', name: 'Gray' },
  accent: { hex: 'F43F5E', name: 'Rose' },
};

// Logo SVGs (base64 encoded)
const badgeLogos = {
  white: 'PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCI+PHRleHQgeD0iMTIiIHk9IjE3IiB0ZXh0LWFuY2hvcj0ibWlkZGxlIiBmb250LWZhbWlseT0ibW9ub3NwYWNlIiBmb250LXNpemU9IjE0IiBmb250LXdlaWdodD0iYm9sZCIgZmlsbD0id2hpdGUiPntqfTwvdGV4dD48L3N2Zz4=',
  red: 'PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCI+PHRleHQgeD0iMTIiIHk9IjE3IiB0ZXh0LWFuY2hvcj0ibWlkZGxlIiBmb250LWZhbWlseT0ibW9ub3NwYWNlIiBmb250LXNpemU9IjE0IiBmb250LXdlaWdodD0iYm9sZCIgZmlsbD0iI0Y0M0Y1RSI+e2p9PC90ZXh0Pjwvc3ZnPg==',
};

// Badge labels
const badgeLabels = [
  { label: 'Built_with', display: 'Built with' },
  { label: 'Powered_by', display: 'Powered by' },
  { label: 'Made_with', display: 'Made with' },
  { label: 'Automated_with', display: 'Automated with' },
  { label: 'Runs_on', display: 'Runs on' },
  { label: 'Uses', display: 'Uses' },
  { label: 'Managed_by', display: 'Managed by' },
];

// Two-tone color combinations
const twoToneCombos = [
  { labelColor: badgeColorPalette.gray, badgeColor: badgeColorPalette.white, name: 'Gray/White' },
  { labelColor: badgeColorPalette.gray, badgeColor: badgeColorPalette.black, name: 'Gray/Black' },
  { labelColor: badgeColorPalette.gray, badgeColor: badgeColorPalette.accent, name: 'Gray/Rose' },
  { labelColor: badgeColorPalette.black, badgeColor: badgeColorPalette.white, name: 'Black/White' },
  { labelColor: badgeColorPalette.black, badgeColor: badgeColorPalette.accent, name: 'Black/Rose' },
  { labelColor: badgeColorPalette.accent, badgeColor: badgeColorPalette.black, name: 'Rose/Black' },
  { labelColor: badgeColorPalette.accent, badgeColor: badgeColorPalette.white, name: 'Rose/White' },
  { labelColor: badgeColorPalette.white, badgeColor: badgeColorPalette.black, name: 'White/Black' },
  { labelColor: badgeColorPalette.white, badgeColor: badgeColorPalette.accent, name: 'White/Rose' },
];

// Helper functions
function buildBadgeUrl(label: string | null, color: string, logoBase64: string) {
  const labelPart = label ? `${label}-jake` : 'jake';
  return `https://img.shields.io/badge/${labelPart}-${color}?style=flat&logo=data:image/svg+xml;base64,${logoBase64}`;
}

function buildTwoToneBadgeUrl(label: string, labelColor: string, badgeColor: string, logoBase64: string) {
  return `https://img.shields.io/badge/${label}-jake-${badgeColor}?style=flat&labelColor=${labelColor}&logo=data:image/svg+xml;base64,${logoBase64}`;
}

function buildMarkdown(label: string | null, url: string) {
  const alt = label ? `${label.replace(/_/g, ' ')} jake` : 'jake';
  return `![${alt}](${url})`;
}

// Generate minimal badges (single-color, both logo variants)
const minimalBadges = Object.entries(badgeColorPalette).flatMap(([colorKey, color]) =>
  Object.entries(badgeLogos).map(([logoKey, logo]) => {
    const url = buildBadgeUrl(null, color.hex, logo);
    return {
      url,
      markdown: buildMarkdown(null, url),
      colorName: color.name,
      logoColor: logoKey,
      description: `${color.name} / ${logoKey} logo`,
    };
  })
);

// Generate single-color labeled badges
const singleColorBadges = badgeLabels.flatMap(({ label, display }) =>
  Object.entries(badgeColorPalette).flatMap(([colorKey, color]) =>
    Object.entries(badgeLogos).map(([logoKey, logo]) => {
      const url = buildBadgeUrl(label, color.hex, logo);
      return {
        label,
        display,
        url,
        markdown: buildMarkdown(label, url),
        colorName: color.name,
        logoColor: logoKey,
      };
    })
  )
);

// Generate two-tone labeled badges
const twoToneBadges = badgeLabels.flatMap(({ label, display }) =>
  twoToneCombos.flatMap((combo) =>
    Object.entries(badgeLogos).map(([logoKey, logo]) => {
      const url = buildTwoToneBadgeUrl(label, combo.labelColor.hex, combo.badgeColor.hex, logo);
      return {
        label,
        display,
        url,
        markdown: buildMarkdown(label, url),
        comboName: combo.name,
        logoColor: logoKey,
      };
    })
  )
);
